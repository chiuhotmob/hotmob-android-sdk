<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">


<ImageButton
        android:id="@+id/hotmob_video_player_control_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_play"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:id="@+id/hotmob_video_player_control_pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_pause"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:id="@+id/hotmob_video_player_control_replay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_replay"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <SeekBar
        android:id="@+id/hotmob_video_player_control_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:secondaryProgress="255"
        android:progressDrawable="@drawable/video_ad_seekbar_progress"
        android:thumb="@drawable/hotmob_video_progress_bar_point"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:minHeight="3dip"
        android:maxHeight="6dip"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"/>

    <TextView
        android:id="@+id/hotmob_video_player_control_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00" 
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:id="@+id/hotmob_video_player_control_sound_on_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_mute"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:id="@+id/hotmob_video_player_control_sound_off_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_unmute"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:id="@+id/hotmob_video_player_control_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_player_close"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

</LinearLayout>
